{
	"manifest_version": 3,
	"name": "FFXIV - Progress Tracker",
	"version": "2.0",
	"description": "Add checkboxes to track progress on tables.",
	"permissions": ["activeTab", "storage"],
	"action": {
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"matches": ["https://ffxiv.consolegameswiki.com/wiki/*"],
			"js": ["contentScript.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
